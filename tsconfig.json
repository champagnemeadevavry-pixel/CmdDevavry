{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    /* ✅ Types nécessaires */
    "types": ["node", "@netlify/functions"],

    /* Optionnel : alias @/ -> src */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  /* ✅ Inclure le code React et les fonctions Netlify */
  "include": ["src", "netlify/functions"]
}
